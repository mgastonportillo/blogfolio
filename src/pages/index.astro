---
import Layout from "../layout/Layout.astro";
import Link from "../components/Link.astro";
import Toolbar from "../components/Toolbar.astro";
import UserAlias from "../components/UserAlias.astro";
import GluedComma from "../components/GluedComma.astro";
import LogoHoverGlow from "../components/LogoHoverGlow/LogoHoverGlow";
---

<Layout title="mgastonportillo">
  <div class="home-wrapper" aria-labelledby="home">
    <div class="wrapper-header">
      <h1 class="welcome">welcome, <UserAlias /></h1>
      <Toolbar />
    </div>

    <p>
      I'm <em>Gale</em> (or Gast√≥n, either is fine).
    </p>

    <br />
    <p>
      A <em>creative web developer</em> commited to build experiences that
      <em>delight without distraction</em>.
    </p>

    <p>
      Inspired by
      <Link href="https://calmtech.com/">calm technology principles</Link>
      <GluedComma /> I design websites that feature intuitive navigation and are
      respectful to the user, while still leaving room for magic.
    </p>

    <LogoHoverGlow client:only="react" />
  </div>
</Layout>

<style lang="scss">
  @import "../styles/mixins.scss";

  body {
    overflow: hidden;
  }

  .wrapper-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  em {
    @include accent-gradient(0deg);
    background-clip: text;
    -webkit-background-clip: text;
    text-fill-color: transparent;
    -webkit-text-fill-color: transparent;
    -webkit-animation: AnimationName 10s ease infinite;
    -moz-animation: AnimationName 10s ease infinite;
    animation: background 10s ease infinite;
  }
</style>
