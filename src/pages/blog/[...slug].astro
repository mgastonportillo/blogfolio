---
import { getCollection } from "astro:content";
import MarkdownPostLayout from "../../layout/MarkdownPostLayout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const dayMonth = entry.data.pubDate.toDateString().slice(4, 10);
const year = entry.data.pubDate.toDateString().slice(11, 15);
const date = `${dayMonth}ᵗʰ, ${year}`;
---

<MarkdownPostLayout frontmatter={entry.data} ftDate={date}>
  <Content />
</MarkdownPostLayout>
