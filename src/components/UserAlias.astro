---
import type { SupportedLocale } from "../types/types";

interface Props {
  locale?: SupportedLocale;
}

const { locale = "en" } = Astro.props;
---

<code id="user-alias" data-locale={locale}></code>

<script>
  import type { SupportedLocale } from "../types/types";
  import { getRandomUserAliasByLocale } from "../utils/userAlias.ts";

  const updateAlias = () => {
    const userAlias: HTMLElement = document.querySelector("#user-alias")!;
    userAlias.innerHTML = "";
    const locale = userAlias.dataset?.locale;
    let randomAlias = getRandomUserAliasByLocale(locale as SupportedLocale);
    userAlias.innerHTML = randomAlias;
  };

  updateAlias();

  document.addEventListener("astro:page-load", () => {
    updateAlias();
  });
</script>

<style lang="scss">
  @import "../styles/variables.scss";
  @import "../styles/mixins.scss";

  #user-alias {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba($accent-light, 12%);
    color: $accent-light;
    border-radius: 4px;
    padding: 0.3em 0.4em;
    margin-right: 2em;
    white-space: nowrap;

    @include respond-to(md) {
      display: block;
      width: fit-content;
    }
  }
</style>
