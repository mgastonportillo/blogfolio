---
interface Props {
  locale?: "en" | "es";
}

const { locale = "en" } = Astro.props;
---

<code id="user-alias" data-locale={locale}></code>

<script>
  import { userAliasesByLocale } from "../utils/userAliasesByLocale.ts";

  document.addEventListener("astro:page-load", () => {
    const userAlias: HTMLElement = document.querySelector("#user-alias")!;
    if (userAlias instanceof HTMLElement) {
      const locale = userAlias.dataset?.locale!;
      let aliases = userAliasesByLocale[locale];
      let randomAlias = aliases[Math.floor(Math.random() * aliases.length)];
      userAlias.innerHTML = randomAlias;
    }
  });
</script>

<style lang="scss">
  @import "../styles/variables.scss";
  @import "../styles/mixins.scss";

  #user-alias {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba($accent-light, 12%);
    color: $accent-light;
    border-radius: 4px;
    padding: 0.3em 0.4em;
    margin-right: 2em;
    white-space: nowrap;

    @include respond-to(md) {
      display: block;
      width: fit-content;
    }
  }
</style>
