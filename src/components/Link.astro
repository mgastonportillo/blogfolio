---
interface Props {
  href: string;
}

let { href } = Astro.props;
import linkIcon from "../assets/img/link.svg?raw";
---

<a href={href}>
  <span class="text"><slot /></span>
  <span class="icon" aria-hidden="true"><Fragment set:html={linkIcon} /></span>
</a>

<style lang="scss">
  @import "../styles/variables.scss";

  a {
    text-decoration: none;

    .text {
      font-size: 1.3rem;
      transition: 0.3s ease;
      color: $accent-light-alt;
      text-decoration: underline;
    }

    &:hover .text {
      color: $accent-alt;
    }

    .icon {
      width: 10px;
      margin: 0 2px 0 2px;
      display: inline-block;
    }
  }
</style>
