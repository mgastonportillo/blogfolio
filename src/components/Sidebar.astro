---
import GaleLogo from "../assets/img/gale-logo.svg?raw";

interface Link {
  href: string;
  text: string;
}

const links: Link[] = [
  { href: "/", text: "home" },
  { href: "/about/", text: "about" },
  { href: "/blog/", text: "blog" },
  { href: "/links/", text: "links" },
];
---

<aside>
  <div class="gale-logo">
    <Fragment set:html={GaleLogo} />
  </div>
  <nav class="menu-list">
    {
      links.map(({ href, text }) => (
        <a href={href} class={href === Astro.url.pathname ? "active" : ""}>
          {text}
        </a>
      ))
    }
  </nav>
</aside>

<style>
  aside {
    min-width: 80px;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: start;
    flex-direction: column;
    padding-right: 50px;
  }

  a {
    color: white;
    background: none;
    border: none;
    text-decoration: none;
    transition: none;
  }

  a:hover,
  a.active {
    font-weight: 700;
  }

  a.active:before {
    position: absolute;
    content: "> ";
  }

  .menu-list {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 3rem;
    gap: 1rem;
  }

  .gale-logo {
    transform: perspective(1500px) rotateY(15deg) rotateX(10deg);
    transition: transform 1s ease;
    width: 100px;
  }

  .gale-logo:hover {
    cursor: pointer;
    transform: perspective(3000px) rotateY(5deg) scale(1.1);
  }
</style>
