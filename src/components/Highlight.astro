---
interface Props {
  style?: "red" | "green" | "blue" | "yellow" | "purple";
  type?: "info" | "warn" | "tip";
  pre?: string;
  pos?: "center" | "right";
}

const { style, pos, pre, type = "generic" } = Astro.props;
import { hlIcons } from "../utils/hlIcons";

console.log(pos);
---

<div class={`hightlight ${style || type || "tip"} ${pos}`}>
  <span aria-hidden="true">
    <Fragment set:html={hlIcons[type] || hlIcons["tip"]} />
  </span>
  <p>
    <em class={!pre ? "hidden" : ""}>{pre}&nbsp;</em>
    <slot />
  </p>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .hightlight {
    display: flex;
    padding: 0.66em 2em 0.66em 1.75em;
    border: 1px solid;
    border-radius: 6px;
    width: fit-content;

    &.center {
      margin: 0 auto;
    }

    &.right {
      margin-left: auto;
      margin-right: 0;
    }

    &.red,
    &.warn {
      border-color: rgba($red-hl, 0.5);
      background: rgba($red-hl, 0.05);
    }

    &.green {
      border-color: rgba($green-hl, 0.5);
      background: rgba($green-hl, 0.05);
    }

    &.blue {
      border-color: rgba($blue-hl, 0.5);
      background: rgba($blue-hl, 0.05);
    }

    &.yellow,
    &.info {
      border-color: rgba($yellow-hl, 0.3);
      background: rgba($yellow-hl, 0.03);
    }

    &.purple,
    &.tip {
      border-color: rgba($purple-hl, 0.5);
      background: rgba($purple-hl, 0.05);
    }

    span {
      font-style: normal;
      align-self: center;
      margin-right: 1em;
      width: 25px;
      min-width: 25px;
      height: 25px;

      svg path {
        fill: white;
      }
    }

    p {
      border-left: 1px solid rgba(255, 255, 255, 5%);
      padding-left: 1em;
    }

    .hidden {
      display: none;
    }
  }
</style>
