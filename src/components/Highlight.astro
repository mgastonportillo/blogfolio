---
interface Props {
  style?: "red" | "green" | "blue" | "yellow" | "purple";
  type?: "info" | "warn" | "generic";
}

const { style, type = "generic" } = Astro.props;
import { hlIcons } from "../utils/hlIcons";
---

<div class={`hightlight ${style || type}`}>
  <i>
    <Fragment set:html={hlIcons[type]} />
  </i>
  <p>
    <slot />
  </p>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .hightlight {
    display: flex;
    padding: 0.66em 1.8em 0.66em 1.8em;
    border: 1px solid;
    border-radius: 6px;

    &.red,
    &.warn {
      border-color: rgba($red-hl, 0.5);
      background: rgba($red-hl, 0.05);
    }

    &.green {
      border-color: rgba($green-hl, 0.5);
      background: rgba($green-hl, 0.05);
    }

    &.blue {
      border-color: rgba($blue-hl, 0.5);
      background: rgba($blue-hl, 0.05);
    }

    &.yellow,
    &.info {
      border-color: rgba($yellow-hl, 0.3);
      background: rgba($yellow-hl, 0.03);
    }

    &.purple,
    &.generic {
      border-color: rgba($purple-hl, 0.5);
      background: rgba($purple-hl, 0.05);
    }

    i {
      font-style: normal;
      align-self: center;
      margin-right: 1em;
      width: 25px;
      min-width: 25px;
      height: 25px;

      svg path {
        fill: white;
      }
    }

    p {
      border-left: 1px solid rgba(255, 255, 255, 5%);
      padding-left: 1em;
    }
  }
</style>
