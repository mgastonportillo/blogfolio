---
const currentPath = Astro.url.pathname;
---

<div class="locale-changer-wrapper">
  <div class="locale-changer">
    <a class={`en ${currentPath === "/" ? "active" : ""}`} href="/">en</a>
    <a class={`es ${currentPath === "/es/" ? "active" : ""}`} href="/es/">es</a>
  </div>
</div>

<style lang="scss">
  @import "../styles/variables.scss";
  @import "../styles/mixins.scss";

  .locale-changer {
    display: flex;
    align-content: center;
    justify-content: center;
    gap: 1rem;
    border: 1px solid rgba($accent-light, 0.1);
    background: rgba($accent-light, 5%);
    border-radius: 6px;
    margin-bottom: -4px;
    padding-bottom: 2px;

    a {
      position: relative;
      color: lightgrey;
      transition: 0.3s ease;
      text-decoration: none;
      margin-bottom: -2px;
      padding-bottom: 1px;

      &.en {
        padding-left: 0.5rem;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;

        &:after {
          position: absolute;
          right: -0.5em;
          content: "";
          background: inherit;
          width: 0.5em;
          height: 100%;
          clip-path: polygon(0% 0%, 100% 0%, 50% 100%, 0% 100%);
        }
      }

      &.es {
        padding-right: 0.5rem;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;

        &:before {
          position: absolute;
          left: -0.5em;
          content: "";
          background: inherit;
          width: 0.5em;
          height: 100%;

          clip-path: polygon(50% 0%, 100% 0%, 100% 100%, 0% 100%);
        }
      }

      &.active {
        background: rgba($accent-light, 10%);
        color: $accent-light;

        &:hover {
          color: $accent-lighter;
        }
      }

      &:hover {
        color: $white;
      }
    }
  }
</style>
