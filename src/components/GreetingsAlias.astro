<code id="greetings-alias"></code>

<script>
  document.addEventListener("astro:page-load", () => {
    const aliases = ["sojourner", "traveller", "stargazer", "space cowboy"];
    const visitorAlias = document.querySelector("#greetings-alias");
    let randomAlias = aliases[Math.floor(Math.random() * aliases.length)];

    if (visitorAlias) {
      visitorAlias.innerHTML = randomAlias;
    }
  });
</script>

<style lang="scss">
  @import "../styles/variables.scss";
  @import "../styles/mixins.scss";

