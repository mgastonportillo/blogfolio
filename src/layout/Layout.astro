---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://use.typekit.net/wwa2fwb.css" />
    <ViewTransitions />
  </head>
  <body>
    <Sidebar />
    <section transition:animate="slide">
      <slot />
    </section>
    <style is:global>
      :root {
        --accent: 136, 57, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 50, 10, 102;
        --accent-alt: 175, 255, 170;
        --accent-light-alt: 213, 255, 198;
        --accent-dark-alt: 54, 146, 110;
        --accent-gradient: linear-gradient(
          0deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 40%
        );
        --accent-gradient-alt: linear-gradient(
          0deg,
          rgb(var(--accent-alt)),
          rgb(var(--accent-light-alt)) 40%
        );
      }

      html {
        font-family: "marine", system-ui, sans-serif;
        background: #13151a;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
      }

      body {
        display: flex;
        width: 75%;
        max-width: 960px;
      }

      h1 {
        color: white;
        font-size: 2rem;
      }

      h2,
      h3,
      p {
        font-size: 1.3rem;
        color: white;
      }

      a {
        font-size: 1.3rem;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .no-icon:after {
        display: none;
      }
    </style>
  </body>
</html>
