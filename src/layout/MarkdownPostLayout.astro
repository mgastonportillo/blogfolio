---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;

const dayMonth = frontmatter.pubDate.toDateString().slice(4, 10);
const year = frontmatter.pubDate.toDateString().slice(11, 15);
const date = `${dayMonth}ᵗʰ, ${year}`;
---

<Layout title={frontmatter.title}>
  <a href="/blog/">&#60; posts</a>
  <p>{date}</p>
  <div class="md-wrapper">
    <slot />
  </div>
</Layout>

<style lang="scss">
  @import "../styles/mixins.scss";

  a {
    color: white;
    text-decoration: none;
    position: absolute;
    top: 8rem;

    @include respond-to(sm) {
      top: 0;
      position: relative;
      font-size: 1.5rem;
    }

    &:before:hover {
      content: "< ";
    }

    &:hover {
      font-weight: bold;
    }
  }

  p {
    color: darkgrey;
  }
</style>

<style lang="scss" is:global>
  @import "../styles/variables.scss";

  .md-wrapper {
    hr {
      border-color: rgba(255, 255, 255, 0.05);
    }

    .foot-notes {
      margin-top: 4rem;
    }
  }
</style>
